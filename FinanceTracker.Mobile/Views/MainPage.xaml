<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceTracker.Mobile.Views.MainPage">

    <StackLayout Padding="10">
        <Label Text="Finance Tracker" FontSize="24" HorizontalOptions="Center" />

        <ListView ItemsSource="{Binding Transactions}" Margin="0,10,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Description}" Detail="{Binding Amount}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Entry Placeholder="Description" Text="{Binding NewDescription}" Margin="0,10,0,0" />
        <Entry Placeholder="Amount" Text="{Binding NewAmount}" Keyboard="Numeric" Margin="0,10,0,0" />
        <Entry Placeholder="Category" Text="{Binding NewCategory}" Margin="0,10,0,0" />
        <Button Text="Add Transaction" Command="{Binding AddTransactionCommand}" Margin="0,10,0,0" />
    </StackLayout>
</ContentPage>
